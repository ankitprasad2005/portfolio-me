---
import Layout from '../layouts/Layout.astro';

// Extract the requested path from the URL
const requestedPath = Astro.url.pathname;
---

<Layout>
    <div class="container mx-auto px-4 py-12">
        <div class="border border-gray-700 rounded-lg p-6 bg-black shadow-md">
            <div class="flex flex-col items-center text-center">
                <h1 class="text-5xl font-bold text-white mb-4">404</h1>
                
                <p class="text-gray-400 mb-6">
                    The page you're looking for doesn't exist or has been moved.
                </p>
                
                <div class="w-full max-w-md mb-6 border border-gray-700 rounded-lg p-4 bg-black">
                    <div class="flex items-start">
                        <span class="text-primary mr-2">$</span>
                        <div class="text-left">
                            <span class="text-gray-300">find / -name "*{requestedPath}*" -print</span>
                            <p class="text-gray-400 mt-4">
                                find: No such file or directory: '{requestedPath}'
                            </p>
                        </div>
                    </div>
                </div>

                <a 
                    href="/" 
                    class="w-full max-w-md px-4 py-2.5 text-center border border-gray-600 rounded-lg hover:text-primary hover:border-primary"
                >
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    h1 {
        background: linear-gradient(90deg, #ffffff 0%, #a0a0a0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>