---
import LinkIcon from './LinkIcon.astro';

interface Link {
    link: string;
    title?: string;
    icon: 'hub' | 'blog' | 'website' | 'other';
}

const links: Link[] = [{
    link: 'https://hub.wlan0.in',
    title: 'Hub',
    icon: 'hub'
}, {
    link: 'https://blog.wlan0.in',
    title: 'Blog',
    icon: 'blog'
}];

---

<!-- Start: Other Links -->
<div class="flex flex-wrap gap-1 mt-6 justify-between">
    {links.map(link =>
        <a
            href={link.link}
            target="_blank"
            title={link.title}
            rel="noopener noreferrer"
            class="flex flex-row items-center justify-center w-[45%] h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5">
            <LinkIcon icon={link.icon} />
            <span class="text-gray-100 ml-2">{link.title}</span>
        </a>
    )}
</div>
<!-- End: Other Links -->
